<% include ../partials/head %> <!-- including head.ejs -->
<header>
  <% include ../partials/header %> <!-- including header.ejs -->
</header>

  <div class="callout large">
    <div class="row column text-center">
      <h1>Display Through Design</h1>
      <p class="lead">A simple portfolio written in nodejs, by Anthony Belton.</p>
      <a href="#" class="button large login">Login</a>
      <a href="#" class="button large hollow signup">Sign up</a>
   <% include ../partials/login %>
    </div>
  </div>
  <hr>
  <div class="row column">
          <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
          <div class="post-menu"><span class="make-post"><a href="#">Make Post</a></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="view-posts"><a href="#">View Posts</a></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="update-portfolio"><a href="#">Add to Portfolio</a></span></div>
          <div class="make-post-div">
            <div class="well">
                <h3><span class="fa fa-user"></span>Make a New Post</h3>
            </div>
            <div>
              <form id="new-post" name="new-post" action="/post" method="post">
        <div id="boxes">
        <input type="text" name="author" placeholder="Username" class="username" required><br/>
        <input type="text" name="pTitle" placeholder="Title" class="username" required><br/>
        <textarea name="content" id="content_post" placeholder="Content to add" class="content-post" required></textarea><br/>
        <script>
                CKEDITOR.replace( 'content_post' );
            </script>
      </div>
      <br/>
        <button type="submit" class="button">Submit</button>
        <button type="reset" class="button">Reset</button>
      </form>
            </div>
          </div>
            <div class="post-list">
              <h3>Post List:</h3>
              <ul>
                  <% for(var i=0; i < posts.length; i++) { %>
                    <div class="postbg">
                    <li class="li-post"><strong><%= posts[i].pTitle %></strong>&nbsp;&nbsp;<a href="#">edit</a>&nbsp;&nbsp;..&nbsp;&nbsp;<a href="/destroy/<%= posts[i]._id %>">delete</a></li>
                       </div>
                         <br />
                      <% }; %>
                    </ul>
            </div>
            <div class="update-portfolio-div"><h3>Update Portfiolio</h3>
            <div class="portfolio_form">
              <form id="new-portfolio" name="new-portfolio" action="/post" method="post">
              <div id="boxes">
              <input type="text" name="portTitle" placeholder="Title" class="portfolio" required><br/>
              <input type="text" name="portImage" placeholder="Image" class="portfolio" required><br/>
              <textarea name="portDescription" id="portfolio_post" placeholder="Portfolio Description" class="content-post" required></textarea><br/>
              <script>
                      CKEDITOR.replace( 'portfolio_post' );
                  </script>
              <button type="submit" class="button">Submit</button>
              <button type="reset" class="button">Reset</button>
            </form>
            </div>
            </div>
          </div>
        </div>
  </div>


<% include ../partials/footer %> <!-- including header.ejs -->
