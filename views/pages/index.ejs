                <div class="postbg">
                 <li class="li-post"><strong><%= posts[i].pTitle %></strong></li>
                 <li class="li-author"><strong>Author:</strong> <%= posts[i].author %></li>
                 <li class="li-content"><%- posts[i].content %></li>
               </div>
                 <br />
              <% }; %>
            </ul>
    </div>
