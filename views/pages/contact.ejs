<% include ../partials/head %> <!-- including head.ejs -->
<header>
  <% include ../partials/header %> <!-- including header.ejs -->
</header>

  <div class="callout large">
    <div class="row column text-center">
      <h1>Display Through Design</h1>
      <p class="lead">A simple portfolio written with nodejs, by Anthony Belton.</p>
      <a href="#" class="button large login">Login</a>
      <a href="#" class="button large hollow signup">Sign up</a>
   <% include ../partials/login %>
    </div>
  </div>
  <hr>
  <div class="row column" ng-controller="contactCtrl">
    <h1><center>{{ title }}</center></h1>
    <div class="contact_text">
      <p>Questions? Comments? Feel free to fill out the form below and I will be sure to get back to you as soon as possible!</p>
     </div>
    <div id="form-main">
      <div id="form-div">
        <form class="form" id="form1">
          <p class="name">
            <input name="name" type="text" class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" placeholder="Name" id="name" ng-click="focused('name')" ng-blur="refocused('name')" />
          </p>

          <p class="email">
            <input name="email" type="text" class="validate[required,custom[email]] feedback-input" id="email" placeholder="Email" ng-click="focused('email')" ng-blur="refocused('email')" />
          </p>

          <p class="text">
            <textarea name="text" class="validate[required,length[6,300]] feedback-input" id="comment" placeholder="Comment" ng-click="focused('comment')" ng-blur="refocused('comment')"></textarea>
          </p>
          <div class="submit">
            <input type="submit" value="SEND" id="button-blue"/>
            <div class="ease"></div>
          </div>
        </form>
      </div>
  </div>


<% include ../partials/footer %> <!-- including header.ejs -->
